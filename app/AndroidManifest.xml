<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kpsug.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.kpsug.app.search.SearchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.kpsug.app.film.FilmDetailsActivity"
            android:label="@string/title_activity_film_details" >
        </activity>
        <activity
            android:name="ru.kpsug.app.search.ExtendedSearchActivity"
            android:label="@string/title_activity_extended_search" >
        </activity>
        
        <service android:enabled="true" android:name="ru.kpsug.app.service.ConnectionService" />
    </application>
    
    
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
