<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kpsug.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name=".search.SearchActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".film.FilmDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_film_details" >
        </activity>
        <activity
            android:name=".search.ExtendedSearchActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_extended_search" >
        </activity>

        <service
            android:name=".service.ConnectionService"
            android:enabled="true" />

        <activity
            android:name=".film.SuggestionsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_suggestions" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>